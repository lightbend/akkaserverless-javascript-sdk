{
    "name": "{{name}}",
    "version": "0.0.1",
    "dependencies": {
        "@grpc/proto-loader": "^0.1.0",
        "cloudstate": "0.0.3",
        "google-protobuf": "^3.0.0",
        "grpc": "^1.20.2"
    },
    "devDependencies": {
        "@lightbend/create-akkasls-entity": "^{{libraryVersion}}"
    },
    "config": {
        "dockerImage": "my-docker-repo/{{name}}"
    },
    "scripts": {
        "build-proto-desc": "compile-descriptor proto/*.proto",
        "build": "npm run build-proto-desc && akkasls-codegen-js --proto-src-dir ./proto",
        "start": "node index.js",
        "docker-build": "docker build --tag ${npm_package_config_dockerImage}:${npm_package_version} .",
        "docker-push": "docker push ${npm_package_config_dockerImage}:${npm_package_version}",
        "deploy": "npm run docker-build && npm run docker-push && akkasls services deploy $npm_package_name ${npm_package_config_dockerImage}:${npm_package_version}"
    }
}
