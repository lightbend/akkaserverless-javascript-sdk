{
  "name": "@kalix-io/testkit",
  "version": "0.0.0",
  "description": "Kalix Testkit",
  "keywords": [
    "kalix",
    "serverless"
  ],
  "homepage": "https://github.com/lightbend/kalix-javascript-sdk",
  "bugs": {
    "url": "https://github.com/lightbend/kalix-javascript-sdk"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Kalix Team",
    "email": "info@lightbend.com",
    "url": "https://lightbend.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lightbend/kalix-javascript-sdk"
  },
  "engineStrict": true,
  "engines": {
    "node": "~14"
  },
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "@kalix-io/kalix-javascript-sdk": "^1.0.0-M7"
  },
  "dependencies": {
    "testcontainers": "^8.10.1"
  },
  "devDependencies": {
    "@kalix-io/kalix-javascript-sdk": "^1.0.0-M7",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "verify-types": "tsc dist/index.d.ts --noEmit",
    "prepack": "npm run compile && npm run verify-types",
    "preintegration-test": "npm run integration-test-descriptor && npm run integration-test-protobuf",
    "integration-test-descriptor": "compile-descriptor integration-test/example.proto --descriptor_set_out=integration-test/user-function.desc",
    "integration-test-protobuf": "pbjs -t static-module -w commonjs integration-test/example.proto -o integration-test/proto.js && pbts -o integration-test/proto.d.ts integration-test/proto.js",
    "integration-test": "mocha integration-test/**/*.test.ts",
    "prepublishOnly": "npm version --no-git-tag-version $(bin/version.sh)"
  },
  "publishConfig": {
    "@kalix-io:registry": "https://registry.npmjs.org"
  }
}
